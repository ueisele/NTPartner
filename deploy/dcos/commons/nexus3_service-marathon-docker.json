{
  "id": "/nexus3",
  "instances": 1,
  "cpus": 0.5,
  "mem": 1024,
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "nexus-data",
        "mode": "RW",
        "persistent": {
          "size": 10000
        }
      }
    ],
    "docker": {
      "image": "sonatype/nexus3",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": 0,
          "protocol": "tcp",
          "name": "http-api",
          "labels": {
            "VIP_0": "/nexus3:80"
          }
        },
        {
          "containerPort": 5000,
          "hostPort": 0,
          "protocol": "tcp",
          "name": "docker-group",
          "labels": {
            "VIP_0": "/nexus3:5000"
          }
        },
        {
          "containerPort": 5001,
          "hostPort": 0,
          "protocol": "tcp",
          "name": "docker-private",
          "labels": {
            "VIP_0": "/nexus3:5001"
          }
        }
      ]
    }
  },
  "residency": {
    "relaunchEscalationTimeoutSeconds": 10,
    "taskLostBehavior": "WAIT_FOREVER"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/",
      "portName": "http-api",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "readinessChecks": [
    {
      "protocol": "HTTP",
      "path": "/",
      "portName": "http-api",
      "intervalSeconds": 130,
      "timeoutSeconds": 120,
      "httpStatusCodesForReady": [ 200, 302 ],
      "preserveLastResponse": true
    }
  ],
  "labels": {
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "nexus3.nt.de",
    "HAPROXY_0_PORT": "80",
    "HAPROXY_1_VHOST": "nexus3.nt.de",
    "HAPROXY_1_PORT": "5000",
    "HAPROXY_2_VHOST": "nexus3.nt.de",
    "HAPROXY_2_PORT": "5001"
  },
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  }
}
